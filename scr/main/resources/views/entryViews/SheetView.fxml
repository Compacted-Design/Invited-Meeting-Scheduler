<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" onDragOver="#handleDragOver" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="compactedDesign.invitedMeetingScheduler.controllers.entry.SheetViewController">
   <center>
      <VBox prefHeight="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Spreadsheet Entry">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label text="Drag the spreadsheet into the window, or find it in the directory" />
            <TextField fx:id="urlTextBox" promptText="Excel Sheet Directory" />
            <Button mnemonicParsing="false" text="Submit" />
         </children>
      </VBox>
   </center>
</BorderPane>
